<%= form_with model: @post do |form|%>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, rows:5, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= form.submit "Create Post", class:"btn btn-primary"%>
    </div>
<% end %>